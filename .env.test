# ============================================================================
# HORRORBOT - Test Environment Variables
# ============================================================================
# Loaded by pytest-dotenv before test collection.
# Contains safe placeholder values so Settings() can instantiate in CI
# without a full .env file. No real secrets here.
# ============================================================================

ENVIRONMENT=test

# TMDB (overridden by CI secret TMDB_API_KEY when available)
TMDB_API_KEY=test-api-key

# Kaggle
KAGGLE_USERNAME=test_user
KAGGLE_KEY=test_key

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=test_user
POSTGRES_PASSWORD=test_password
POSTGRES_DB=horrorbot_test
POSTGRES_VECTORS_DB=horrorbot_vectors_test
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Security
JWT_SECRET_KEY=test-secret-key-do-not-use-in-production-minimum-32-chars
AUTH_DEMO_USERS=testuser:testpass123,demo:demopass1234

# LLM
LLM_MODEL_PATH=models/test.gguf
LLM_HF_REPO=test/test-model-gguf
LLM_HF_FILENAME=test-model.gguf
LLM_CONTEXT_LENGTH=4096
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.7
LLM_TIMEOUT_SECONDS=60
LLM_N_GPU_LAYERS=-1

# Intent Classifier
CLASSIFIER_MODEL_NAME=MoritzLaurer/DeBERTa-v3-base-zeroshot-v2.0
CLASSIFIER_CONFIDENCE_THRESHOLD=0.4
CLASSIFIER_DEVICE=auto

# Embeddings
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=64
